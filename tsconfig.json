{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"declaration": true,
		"declarationDir": "lib",
		"emitDeclarationOnly": true,
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"sourceMap": false,
		"types": [
			"node",
			"jest"
		]
	},
	"include": [
		"src/**/*.ts"
	]
}
